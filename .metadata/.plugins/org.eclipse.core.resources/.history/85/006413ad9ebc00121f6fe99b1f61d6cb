//http://stackoverflow.com/questions/16252319/i-cannot-solve-this-with-slick2d-java-code

import org.newdawn.slick.*;
import org.newdawn.slick.state.BasicGameState;
import org.newdawn.slick.state.StateBasedGame;

public class Splash extends BasicGameState{
	
	static Image splash; 
	private final int DELAY = 5000;
	private int elapsedTime = 0;
	
	public int getID() {
		return GameStates.Splash.ordinal();
	}
	
	public Splash() {

	}

	public void init(GameContainer gc, StateBasedGame sg) throws SlickException {
		setDisplayMode(1000,1000,false);
		splash = new Image("res/sumobotsimsplash.png");
	}

	public void render(GameContainer gc, StateBasedGame sg, Graphics g) throws SlickException {
		splash.draw(0,0,2);
	}

	public void update(GameContainer gc, StateBasedGame sg, int delta) throws SlickException {
		elapsedTime += delta;
		if(elapsedTime >= DELAY) {
			sg.enterState(GameStates.Build.ordinal());
		}
	}




}
